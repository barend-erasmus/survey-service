<!DOCTYPE html>
<html>

<head>
    <title>Survey Service</title>

    <link href="/static/css/bootstrap.min.css" rel="stylesheet">

    <script src="/static/js/jquery-3.1.1.min.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>

    <script src="https://surveyjs.azureedge.net/0.95.0/survey.jquery.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">

            <div id="surveyElement">
            </div>
            <div id="surveyResult"></div>
        </div>
    </div>

    <script type="text/javascript">

        Survey.Survey.cssType = "bootstrap";
        Survey.defaultBootstrapCss.navigationButton = "btn btn-green";


        var survey = null;

        $.ajax({
            type: 'GET',
            url: `/api/survey/find?surveyId=${parseQueryString(location.search).surveyId}`,
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            success: function (data) {

                survey = new Survey.Model(data);

                survey.onComplete.add(function (result) {
                    $.ajax({
                        type: 'POST',
                        url: `/api/survey/response`,
                        data: JSON.stringify({
                            data: result.data,
                            profileId: 'profile-id',
                            surveyId: parseQueryString(location.search).surveyId,
                        }),
                        contentType: 'application/json; charset=utf-8',
                        dataType: 'json',
                        success: function (data) {
                            
                        },
                        failure: function (err) {
                            alert(err);
                        }
                    });
                });

                $("#surveyElement").Survey({
                    model: survey
                });
            },
            failure: function (err) {
                alert(err);
            }
        });

        function parseQueryString(url) {
            var urlParams = {};
            url.replace(
                new RegExp("([^?=&]+)(=([^&]*))?", "g"),
                function ($0, $1, $2, $3) {
                    urlParams[$1] = $3;
                }
            );

            return urlParams;
        }

    </script>

</body>

</html>