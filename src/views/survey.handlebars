<div class="container">
    <h2>{{survey.title}}</h2>
    <form method="post">
        {{#each survey.questions as |question key|}}
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{question.text}}</h3>
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                        {{#ifCond question.type 'multiple-choice'}}
                            {{#each question.options as |option key|}}
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="question-{{question.id}}" value="{{option}}" />{{option}}
                                    </label>
                                </div>
                            {{/each}}
                        {{/ifCond}}

                        {{#ifCond question.type 'checkboxes'}}
                            {{#each question.options as |option key|}}
                                <div class="checkbox">
                                    <label><input name="question-{{question.id}}" type="checkbox" value="{{option}}"/>{{option}}</label>
                                </div>
                            {{/each}}
                        {{/ifCond}}

                        {{#ifCond question.type 'text'}}
                            <textarea class="form-control" rows="5" name="question-{{question.id}}"></textarea>
                        {{/ifCond}}

                        {{#ifCond question.type 'rating'}}
                            <select class="form-control" name="question-{{question.id}}">
                                {{#for question.linearScaleMinimum question.linearScaleMaximum 1}}
                                    <option>{{this}}</option>
                                {{/for}}
                            </select>
                        {{/ifCond}}
                    </ul>
                </div>
            </div>
        </div>
        {{/each}}
        <div class="row">
            <button type="submit" class="btn btn-primary pull-right">Submit</button>
        </div>
    </form>
</div>