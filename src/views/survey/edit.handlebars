<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Survey - Edit</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/ui/survey/dashboard">Home</a>
            </li>
            <li>
                <a>Survey</a>
            </li>
            <li class="active">
                <strong>Edit</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Survey</h5>
                    <div class="ibox-tools">

                    </div>
                </div>
                <div class="ibox-content">
                    <div id="surveyContainer">
                        <div id="editorElement"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

    Survey.Survey.cssType = "bootstrap";
    Survey.defaultBootstrapCss.navigationButton = "btn btn-green";

    Survey.JsonObject.metaData.addProperty("survey", { name: "id:number", default: null });
    Survey.JsonObject.metaData.addProperty("page", { name: "id:number", default: null });
    Survey.JsonObject.metaData.addProperty("questionbase", { name: "id:number", default: null });

    var editorOptions = {};
    var editor = new SurveyEditor.SurveyEditor("editorElement", editorOptions);


    editor.saveSurveyFunc = function () {

        var json = JSON.parse(editor.text);

        json.id = parseQueryString(location.search).surveyId;

        $.ajax({
            type: 'POST',
            url: `/api/survey/update`,
            data: JSON.stringify(json),
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            success: function (data) {
                window.location = `/ui/survey/edit?surveyId=${data.id}`;
            },
            failure: function (err) {
                alert(err);
            }
        });


    }

    $.ajax({
        type: 'GET',
        url: `/api/survey/find?surveyId=${parseQueryString(location.search).surveyId}`,
        contentType: 'application/json; charset=utf-8',
        dataType: 'json',
        success: function (data) {
            editor.text = JSON.stringify(data);
        },
        failure: function (err) {
            alert(err);
        }
    });

    function parseQueryString(url) {
        var urlParams = {};
        url.replace(
            new RegExp("([^?=&]+)(=([^&]*))?", "g"),
            function ($0, $1, $2, $3) {
                urlParams[$1] = $3;
            }
        );

        return urlParams;
    }

</script>